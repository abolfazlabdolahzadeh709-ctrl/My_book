<body>
  <h1>🍎 مراقبت از ابولفضل با تتوی A</h1>
  <div id="game">
    <div id="apple">
      <div id="tattoo">A</div>
    </div>
    <button onclick="feed()">🍔 غذا بده</button>
    <button onclick="play()">🎾 بازی کن</button>
    <button onclick="sleep()">😴 بخوابون</button>
    <button onclick="clean()">🧼 تمیزش کن</button>
    <div id="status"></div>
  </div>

  <script>
    let happiness = 50;
    let energy = 50;
    let cleanliness = 50;

    function updateStatus() {
      document.getElementById("status").innerHTML =
        `شادی: ${happiness} | انرژی: ${energy} | تمیزی: ${cleanliness}`;
    }

    function feed() {
      happiness += 10;
      energy += 5;
      cleanliness -= 5;
      checkLimits();
    }

    function play() {
      happiness += 15;
      energy -= 10;
      cleanliness -= 5;
      checkLimits();
    }

    function sleep() {
      energy += 20;
      happiness -= 5;
      cleanliness -= 5;
      checkLimits();
    }

    function clean() {
      cleanliness += 20;
      happiness += 5;
      checkLimits();
    }

    function checkLimits() {
      happiness = Math.min(100, Math.max(0, happiness));
      energy = Math.min(100, Math.max(0, energy));
      cleanliness = Math.min(100, Math.max(0, cleanliness));
      updateStatus();
    }

    updateStatus();
  </script>
</body>
