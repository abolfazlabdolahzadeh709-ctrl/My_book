    }
    #game {
      width: 100vw;
      height: 100vh;
      position: relative;
      background: linear-gradient(skyblue, green);
    }
    #player {
      width: 50px;
      height: 50px;
      background: red;
      position: absolute;
      bottom: 0;
      left: 50px;
    }
    .block {
      width: 50px;
